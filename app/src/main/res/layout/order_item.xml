<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="top|start"
            android:text="Gift Cards v1.0"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/order_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:contentDescription="sane ne!!"
            android:text="10Â£"
            android:textColor="#d13400"
            android:textSize="30sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_name"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:gravity="bottom">

            <TextView
                android:id="@+id/order_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="Quantity: 50 pcs"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_quantity"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="Start time: 25/08/2017"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_finish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_start_time"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:text="Finish time: 25/08/2017"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/order_done" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>